{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "build:css": "postcss ./app/tailwind.css -o .app/tailwind.min.css",
    "dev:css": "postcss ./app/tailwind.css -o ./app/tailwind.min.css --watch",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "typecheck": "tsc",
    "coverage": "vitest run --coverage",
    "test": "vitest",
    "e2e": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "e2e:ci": "start-server-and-test dev http://localhost:3000 \"npx cypress run\""
  },
  "dependencies": {
   "prisma": "^4.11.0",
    "@prisma/client": "^4.11.0",
    "@remix-run/node": "^1.14.0",
    "@remix-run/react": "^1.14.0",
    "@remix-run/vercel": "^1.14.0",
    "@tailwindcss/typography": "^0.5.9",
    "@vercel/node": "^2.6.2",
    "axios": "^1.3.4",
    "daisyui": "^2.51.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.14.0",
    "@remix-run/eslint-config": "^1.14.0",
    "@remix-run/serve": "^1.14.0",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@types/testing-library__dom": "^7.5.0",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.3",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "cypress": "^12.7.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.6.0",
    "jsdom": "^21.1.0",
    "msw": "^1.1.0",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
   "prettier": "^2.8.4",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.8.4",
   "vitest": "^0.29.2",
   "vitest-mock-extended": "^1.1.3"
  },
  "browserslist": {
    "production": [
      ">0.01%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      ">0.01%",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=14"
  }
}
